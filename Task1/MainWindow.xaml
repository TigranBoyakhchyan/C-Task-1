<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="Task 1" Height="650" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Name:" Width="250" HorizontalAlignment="Left"/>
            <TextBox x:Name="txtName" Width="250" RenderTransformOrigin="0.5,0.524" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            <TextBlock Text="Age:" Width="250" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            <TextBox x:Name="txtAge" Width="250" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            <TextBlock Text="Address:" Width="250" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            <TextBox x:Name="txtAddress" Width="250" HorizontalAlignment="Left" Margin="0,6,0,0"/>
            <Button Content="Add Person" Click="AddPerson_Click" Margin="0,10,0,0" Width="250" HorizontalAlignment="Left"/>

            <Button Content="Sort by Age" Click="SortByAge_Click" Width="250" HorizontalAlignment="Left" Margin="0,10,0,0"/>
            <Button Content="Sort by Name" Click="SortByName_Click" Width="250" HorizontalAlignment="Left" Margin="0,10,0,0"/>
            <Button Content="Display All The People" Click="DisplayAll_Click" Width="250" HorizontalAlignment="Left" Margin="0,10,0,0"/>

            <TextBlock Text="Search by Age:" Width="250" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            <TextBox x:Name="txtSearchAge" Width="250" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            <Button Content="Search" Click="SearchByAge_Click" Width="250" HorizontalAlignment="Left" Margin="0,10,0,0"/>

            <TextBlock Text="Search by Name:" Width="250" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            <TextBox x:Name="txtSearchName" Width="250" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            <Button Content="Search" Click="SearchByName_Click" Width="250" HorizontalAlignment="Left" Margin="0,10,0,0"/>

            <TextBlock Text="Delete by Name:" Width="250" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            <TextBox x:Name="txtDeleteName" Width="250" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            <Button Content="Delete" Click="DeleteByName_Click" Width="250" HorizontalAlignment="Left" Margin="0,10,0,0"/>

            <TextBlock Text="Delete by Age:" Width="250" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            <TextBox x:Name="txtDeleteAge" Width="250" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            <Button Content="Delete" Click="DeleteByAge_Click" Width="250" HorizontalAlignment="Left" Margin="0,10,0,0"/>
            <ListBox x:Name="lstPeople" Height="525" Margin="258,-522,5,9" Width="500" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
